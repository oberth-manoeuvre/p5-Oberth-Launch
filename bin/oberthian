#!perl
# PODNAME: oberthian
# ABSTRACT: Oberth launch script

use strict;
use warnings;

use FindBin;
use lib "$FindBin::Bin/../lib";

sub main {
	if( @ARGV && $ARGV[0] eq 'bootstrap' ) {
		require Oberth::Launch::Command::Bootstrap;
		Oberth::Launch::Command::Bootstrap->new->run;
	} else {
		require Oberth::Launch;
		Oberth::Launch->new_with_options->run;
	}
}

main;
